const gallery = [
  { img: Moumousse, title: 'Moumousse' },
  { img: Bobby, title: 'Bobby' },
  { img: Jazz, title: 'Jazz' },
  { img: Naska, title: 'Naska' },
  { img: OttawaPoireau, title: 'Ottawa' },
  { img: LeikaCarton, title: 'Leïka' },
  { img: OttawaGame, title: 'Ottawa' },
