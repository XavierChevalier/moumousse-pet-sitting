<section class="bg-gradient-to-bl from-purple-400/20 to-teal-400/20 px-4 py-20">
  <div class="container mx-auto max-w-6xl">
    <h2 class="mb-16 text-center text-4xl font-black uppercase lg:text-6xl">
      <span class="text-yellow-400 drop-shadow-[3px_3px_0px_#000]">MES SERVICES</span>
    </h2>

    <div class="grid gap-8 md:grid-cols-3">
      <!-- Service 1 -->
      <div
        class="group relative transform border-4 border-purple-500 bg-black p-6 transition-all duration-300 hover:scale-105 hover:border-yellow-400"
      >
        <div
          class="absolute inset-0 -z-10 translate-x-2 translate-y-2 transform bg-purple-600 transition-transform group-hover:translate-x-1 group-hover:translate-y-1"
        >
        </div>
        <div class="space-y-4 text-center">
          <div class="mb-4 text-6xl">🏠</div>
          <h3 class="text-xl font-black text-yellow-400 uppercase">Garde à Domicile</h3>
          <p class="text-gray-300">Ton animal reste dans SON territoire, avec TOUS ses repères</p>
        </div>
      </div>

      <!-- Service 2 -->
      <div
        class="group relative transform border-4 border-teal-500 bg-black p-6 transition-all duration-300 hover:scale-105 hover:border-yellow-400"
      >
        <div
          class="absolute inset-0 -z-10 translate-x-2 translate-y-2 transform bg-teal-600 transition-transform group-hover:translate-x-1 group-hover:translate-y-1"
        >
        </div>
        <div class="space-y-4 text-center">
          <div class="mb-4 text-6xl">🚶‍♀️</div>
          <h3 class="text-xl font-black text-yellow-400 uppercase">Promenades Rock</h3>
          <p class="text-gray-300">Des balades énergiques pour que ton chien reste en forme</p>
        </div>
      </div>

      <!-- Service 3 -->
      <div
        class="group relative transform border-4 border-yellow-500 bg-black p-6 transition-all duration-300 hover:scale-105 hover:border-purple-400"
      >
        <div
          class="absolute inset-0 -z-10 translate-x-2 translate-y-2 transform bg-yellow-600 transition-transform group-hover:translate-x-1 group-hover:translate-y-1"
        >
        </div>
        <div class="space-y-4 text-center">
          <div class="mb-4 text-6xl">💊</div>
          <h3 class="text-xl font-black uppercase">Soins & Câlins</h3>
          <p class="font-bold text-gray-800">Médicaments, repas, et surtout beaucoup d'amour</p>
        </div>
      </div>
    </div>
  </div>
</section>
